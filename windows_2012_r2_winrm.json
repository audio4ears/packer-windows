{
  "builders": [
    {
      "type": "vmware-windows-iso",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "iso_url": "{{ user `iso_url` }}",
      "headless": "{{ user `headless` }}",
      "boot_wait": "{{ user `boot_wait` }}",
      "winrm_username": "{{ user `winrm_username` }}",
      "winrm_password": "{{ user `winrm_password` }}",
      "winrm_wait_timeout": "{{ user `winrm_wait_timeout` }}",
      "shutdown_command": "{{ user `shutdown_command` }}",
      "guest_os_type": "windows8srv-64",
      "tools_upload_flavor": "windows",
      "disk_size": 61440,
      "vnc_port_min": 5900,
      "vnc_port_max": 5980,
      "floppy_files": [
        "./answer_files/2012_r2/Autounattend.xml",
        "./scripts/oracle-cert.cer",
        "./scripts/customize-windows.bat",
        "./scripts/openssh.ps1",
        "./scripts/microsoft-updates.bat",
        "./scripts/win-updates.ps1",
        "./scripts/fixnetwork.ps1",
        "./scripts/install-winrm.cmd"
      ],
      "vmx_data": {
        "RemoteDisplay.vnc.enabled": "false",
        "RemoteDisplay.vnc.port": "5900",
        "memsize": "2048",
        "numvcpus": "2",
        "scsi0.virtualDev": "lsisas1068"
      }
    },
    {
      "type": "virtualbox-windows-iso",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "iso_url": "{{ user `iso_url` }}",
      "headless": "{{ user `headless` }}",
      "boot_wait": "{{ user `boot_wait` }}",
      "winrm_username": "{{ user `winrm_username` }}",
      "winrm_password": "{{ user `winrm_password` }}",
      "winrm_wait_timeout": "{{ user `winrm_wait_timeout` }}",
      "shutdown_command": "{{ user `shutdown_command` }}",
      "guest_os_type": "Windows2012_64",
      "disk_size": 61440,
      "floppy_files": [
        "./answer_files/2012_r2/Autounattend.xml",
        "./scripts/oracle-cert.cer",
        "./scripts/customize-windows.bat",
        "./scripts/openssh.ps1",
        "./scripts/microsoft-updates.bat",
        "./scripts/win-updates.ps1",
        "./scripts/fixnetwork.ps1",
        "./scripts/install-winrm.cmd"
      ],
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "2048"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "windows-shell",
      "scripts": [
        "./scripts/_packer_config.cmd",
        "./scripts/vmtool.bat",
        "./scripts/chef.bat",
        "./scripts/vagrant-ssh.bat",
        "./scripts/compile-dotnet-assemblies.bat",
        "./scripts/disable-auto-logon.bat",
        "./scripts/compact.bat"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "windows_2012_r2_winrm_{{.Provider}}.box",
      "vagrantfile_template": "vagrantfile-windows_2012_r2.template"
    }
  ],
  "variables": {
    "iso_checksum": "{{ user `iso_checksum` }}",
    "iso_checksum_type": "{{ user `iso_checksum_type` }}",
    "iso_url": "{{ user `iso_url` }}",
    "headless": "{{ user `headless` }}",
    "boot_wait": "{{ user `boot_wait` }}",
    "winrm_username": "{{ user `winrm_username` }}",
    "winrm_password": "{{ user `winrm_password` }}",
    "winrm_wait_timeout": "{{ user `winrm_wait_timeout` }}",
    "shutdown_command": "{{ user `shutdown_command` }}"
  }
}
